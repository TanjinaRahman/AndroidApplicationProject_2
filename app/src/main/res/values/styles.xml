<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/button</item>
        <item name="colorPrimaryDark">@color/bback</item>
        <item name="colorAccent">@color/button</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/bback</item>

    </style>

    <style name="menu_text">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="CollapsedAppbar" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="ExpandedAppbar" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/base</item>
    </style>

</resources>

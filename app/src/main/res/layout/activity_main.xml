<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bckground"
    android:padding="40dp"
    android:id="@+id/rootLayout"
    android:orientation="vertical">

       <com.rengwuxian.materialedittext.MaterialEditText
           android:id="@+id/edtEmail"
           android:layout_width="354dp"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="232dp"
           android:layout_marginEnd="0dp"
           android:drawableLeft="@drawable/ic_mail"
           android:hint="Email"
           android:inputType="textEmailAddress"
           android:padding="1dp"
           android:text=""
           android:textColor="@color/button"
           android:textColorHint="@color/button"
           android:textSize="20sp"
           app:met_baseColor="@color/button"
           app:met_floatingLabel="highlight"
           app:met_primaryColor="@color/button"
           app:met_singleLineEllipsis="true" />

       <com.rengwuxian.materialedittext.MaterialEditText
           android:id="@+id/edtPass"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignStart="@+id/edtEmail"
           android:layout_alignParentTop="true"
           android:layout_marginStart="0dp"
           android:layout_marginTop="290dp"
           android:hint="Password"
           android:inputType="textPassword"
           android:text=""
           android:textColor="@color/button"
           android:textColorHint="@color/button"
           android:textSize="20sp"
           android:drawableLeft="@drawable/ic_lock"
           app:met_baseColor="@color/button"
           app:met_floatingLabel="highlight"
           app:met_primaryColor="@color/button"
           app:met_singleLineEllipsis="true" />

       <Button
           android:id="@+id/butID"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/edtPass"
           android:layout_alignStart="@+id/rID"
           android:layout_centerHorizontal="true"
           android:layout_marginStart="8dp"
           android:layout_marginTop="26dp"
           android:background="@color/bback"
           android:text="Login"
           android:textColor="@color/white"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/rID"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginEnd="87dp"
           android:layout_marginBottom="12dp"
           android:text="Register Here"
           android:textAlignment="center"
           android:textColor="@color/button"
           android:textSize="18dp" />

       <TextView
           android:id="@+id/forgetpass"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="59dp"
           android:text="Forgot Password?"
           android:textColor="@color/dash" />
</RelativeLayout>
